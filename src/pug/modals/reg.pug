.modal.modal__reg#modalReg
    include ../include/close-btn
    h2.section-title Запись на приём
    ul.modal__wrap 
        li.modal__item 
            label.modal__label(for="") Ваше имя
            input(type="text" placeholder="Николаев Дмитрий Александрович" class="modal__input") 
        li.modal__item.modal__item--half
            label.modal__label(for="") Телефон
            input(value="" class="tel" placeholder="+7 (___) ___-__-__" class="modal__input") 
        li.modal__item.modal__item--half
            label.modal__label(for="") Электронная почта
            input(type="mail" placeholder="mail@domain.ru" class="modal__input") 
        li.modal__item 
            label.modal__label(for="") Центр слуха
            select#mySelect
                option(value="") Центр слуха Астана
                option(value="") Центр слуха Астана2
                option(value="") Центр слуха Астана3
        li.modal__item.modal__item--half
            label.modal__label(for="") Приём
            select#mySelect
                option(value="") Первичный прием
                option(value="") Первичный прием1
                option(value="") Первичный прием2
        li.modal__item.modal__item--half
            label.modal__label Дата записи
            .modal__item--dp
                input#input.modal__input
        li.modal__item 
            label.modal__label Доступное время
            .modal__times 
                .modal__time 
                    input(type="radio" id="time1" name="time")
                    label(for="time1") 11:00 
                .modal__time 
                    input(type="radio" id="time2" name="time")
                    label(for="time2") 12:00 
                .modal__time 
                    input(type="radio" id="time3" name="time")
                    label(for="time3") 14:00 
                .modal__time 
                    input(type="radio" id="time4" name="time")
                    label(for="time4") 15:00 
                .modal__time 
                    input(type="radio" id="time5" name="time")
                    label(for="time5") 16:00 
                .modal__time 
                    input(type="radio" id="time6" name="time")
                    label(for="time6") 17:00 
        li.modal__item 
            label.modal__label(for="") Комментарий к записи
            textarea.modal__textarea(placeholder="Сообщение") 
    .modal__check 
        input(type="checkbox" id="agr1")
        label(for="agr1") Даю согласие на обработку 
            a(href="") персональных данных
